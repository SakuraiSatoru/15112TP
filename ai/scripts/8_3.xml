<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "../bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

    <fire label="circle">
        <direction type="sequence">$1</direction>
        <speed>8</speed>
        <bullet>
            <action>
                <wait>5</wait>
                <fire>
                    <direction type="absolute">$2</direction>
                    <speed>1.2</speed>
                    <bullet/>
                </fire>
                <vanish/>
            </action>
        </bullet>
    </fire>

    <action label="fireCircle">
        <repeat>
            <times>10</times>
            <action>
                <fireRef label="circle">
                    <param>36</param>
                    <param>$1</param>
                </fireRef>
            </action>
        </repeat>
    </action>

    <action label="top">
        <repeat>
            <times>20</times>
            <action>
                <actionRef label="fireCircle">
                    <param>-45+90*$rand</param>
                </actionRef>
                <wait>12-$rank*4</wait>
            </action>
        </repeat>
        <wait>100</wait>
    </action>

</bulletml>
